<div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 col-md-12 col-12">
        <div class="new-hero-content">
          <div class="new-hero-top">
            
              
                  <h2 class="new-hero-heading colored-heading mb-0">{{ section.settings.heading }}</h2>

                
            
              
                  <h2 class="{{ section.id }}new-hero-subheading mb-0 new-hero-subheading-large subheadingcontact">
                    {{ section.settings.sub_heading }}
                  </h2>

                
            
              
                  <p class="new-hero-text mb-0">{{ section.settings.text }}</p>
              
            
          </div>

          <div class="new-hero-bottom">
            <style>
    p.form-messatextge.form-message--success.buy{
        font-size: 14px;
        position: relative;
        right: 187px;
        bottom: 40px;
    }
              .{{ section.id }}new-hero-subheading  {
                font-size:54px !important;
                
                color:white !important;
              }
              .subheadingcontact {
                font:RBNo3.1 W00 Bold !important;
              }
</style>

<div class="new-form-area">
    {% for block in section.blocks%}
      {% if 'form' %}
{%include 'form' %}
        {% endif %}
{% endfor %}
</div>

          </div>
        </div>
      </div>

      
        <div class="col-lg-6 col-12 d-none d-lg-block">
          <div class="new-hero-img-block hero-img-mt">
            <img class="new-hero-img" src="{{ section.settings.image | img_url: '' }}" alt="" loading="lazy">
          </div>
        </div>
      
    </div>
  </div>
{% schema %}
  {
    "name": "contact us",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Heading"
      },
      {
        "type":"text",
        "id":"sub_heading",
        "label":"Sub Heading"
  
      },
      {
        "type":"text",
        "id":"text",
        "label":"Text"
  
      },
       {
        "type":"image_picker",
        "id":"image",
        "label":"Image"
  
      }
    ],
    "blocks":[
      {
       "name":"Form",
        "type":"form"
      }
    ],
    "presets":[{
      "name":"contact us "
    }]
  }
{% endschema %}

{% stylesheet %}
  .new-form-area {
    padding-bottom : 7px;
  }
{% endstylesheet %}

